<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lay_mealsection_tv_title"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/round"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lay_mealsection_ib_add" />

        <Button
            android:id="@+id/lay_mealsection_ib_add"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_baseline_add_14"
            app:layout_constraintTop_toTopOf="@id/lay_mealsection_tv_title"
            app:layout_constraintBottom_toBottomOf="@id/lay_mealsection_tv_title"
            app:layout_constraintStart_toEndOf="@id/lay_mealsection_tv_title"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

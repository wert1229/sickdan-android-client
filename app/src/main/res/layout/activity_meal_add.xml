<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <EditText
            android:id="@+id/act_addmeal_ed_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:layout_constraintBottom_toTopOf="@id/act_addmeal_sp_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/act_addmeal_sp_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/act_addmeal_ed_description"
            app:layout_constraintStart_toStartOf="@id/act_addmeal_ed_description"
            app:layout_constraintEnd_toEndOf="@id/act_addmeal_ed_description" />

        <Button
            android:id="@+id/act_addmeal_btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_constraintTop_toBottomOf="@id/act_addmeal_sp_category"
            app:layout_constraintStart_toStartOf="@id/act_addmeal_sp_category"
            app:layout_constraintEnd_toEndOf="@id/act_addmeal_sp_category"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

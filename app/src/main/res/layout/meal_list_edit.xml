<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp">

        <EditText
            android:id="@+id/lay_mealitem_ed_description"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:gravity="start|center_vertical"
            android:paddingStart="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_edit_focus"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lay_mealitem_ib_confirm"/>

        <Button
            android:id="@+id/lay_mealitem_ib_confirm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="@drawable/ic_confirm"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@id/lay_mealitem_ed_description"
            app:layout_constraintBottom_toBottomOf="@id/lay_mealitem_ed_description"
            app:layout_constraintStart_toEndOf="@id/lay_mealitem_ed_description"
            app:layout_constraintEnd_toStartOf="@id/lay_mealitem_ib_delete"/>

        <Button
            android:id="@+id/lay_mealitem_ib_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/ic_quit"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@id/lay_mealitem_ib_confirm"
            app:layout_constraintBottom_toBottomOf="@id/lay_mealitem_ib_confirm"
            app:layout_constraintStart_toEndOf="@id/lay_mealitem_ib_confirm"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>